<div class="jumbotron text-center">
  <%= render 'layouts/person_icons', role: params[:role] %>
  <h1>Which <b><%= params[:role].downcase %></b> are you?</h1>

  <hr/>
  <%= form_tag do %>
    <div class="form-group">
      <label for="exampleInputEmail1">Select your identity below. If you can't find yourself. It's okay. Pretend to be someone else.</label>
      <%= select_people(@people) %>
    </div>
    <button type="submit" class="btn btn-default btn-primary btn-lg">View Goodies</button>
  <% end %>
</div>
